{
    "name": "ficus",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "serve": "vue-cli-service serve",
        "build": "vue-cli-service build",
        "test": "mocha --recursive --exit --colors",
        "test:coverage": "nyc --reporter=text mocha --recursive --exit --colors",
        "commit": "git-cz",
        "electron:build": "vue-cli-service electron:build",
        "electron:serve": "vue-cli-service electron:serve",
        "eslint": "eslint . --fix",
        "postinstall": "electron-builder install-app-deps",
        "postuninstall": "electron-builder install-app-deps",
        "build:tailwind": "tailwind build src/renderer/assets/index.css -o src/renderer/assets/tailwind.css"
    },
    "main": "background.js",
    "dependencies": {
        "@tailwindcss/forms": "0.2.1",
        "assert": "^2.0.0",
        "chai": "^4.3.7",
        "commitizen": "^4.3.0",
        "commitlint": "^17.5.1",
        "core-js": "^3.8.3",
        "cz-conventional-changelog": "^3.3.0",
        "ficus-editor": "^1.0.5",
        "ficus-mindmap": "0.6.10",
        "fs-extra": "^11.1.1",
        "husky": "^8.0.3",
        "js-yaml": "^4.1.0",
        "nyc": "^15.1.0",
        "os": "^0.1.2",
        "standard": "^17.0.0",
        "tailwindcss": "2.0.4",
        "v-contextmenu": "^3.0.0",
        "vite-mindmap": "^0.6.5",
        "vue": "^3.2.13",
        "vuedraggable": "^4.0.1"
    },
    "devDependencies": {
        "@babel/core": "^7.12.16",
        "@babel/eslint-parser": "^7.12.16",
        "@tailwindcss/postcss7-compat": "^2.2.17",
        "@typescript-eslint/eslint-plugin": "^5.57.1",
        "@typescript-eslint/parser": "^5.57.1",
        "@vue/cli-plugin-babel": "~5.0.0",
        "@vue/cli-plugin-eslint": "~5.0.0",
        "@vue/cli-service": "~5.0.0",
        "@vue/reactivity": "^3.2.47",
        "autoprefixer": "9",
        "electron": "^13.0.0",
        "electron-devtools-installer": "^3.1.0",
        "eslint": "^8.38.0",
        "eslint-plugin-vue": "^8.0.3",
        "mocha": "^10.2.0",
        "postcss": "8.x",
        "unplugin-auto-import": "^0.11.4",
        "unplugin-vue-components": "^0.22.9",
        "vue-cli-plugin-electron-builder": "~2.1.1",
        "vue-template-compiler": "2.6.12",
        "vue3-eventbus": "^2.0.0",
        "vuex": "^4.1.0",
        "wdio-chromedriver-service": "^8.1.1"
    },
    "postcss": {
        "plugins": {
            "autoprefixer": {}
        }
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": [
            "plugin:vue/vue3-essential",
            "eslint:recommended"
        ],
        "parserOptions": {
            "parser": "@babel/eslint-parser"
        },
        "rules": {}
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead",
        "not ie 11"
    ],
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "eslint .",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "standard-version": {
        "changelogHeader": "# Changelog\n\n所有项目的变更记录会记录在如下文件.\n",
        "dryRun": true
    }
}
